<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".additemactivity">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:background="@color/white"
        android:layout_marginTop="25dp"
        android:id="@+id/back"
        android:layout_marginLeft="12dp">
    </ImageButton>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Items"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/txttttt"
        android:textColor="@color/black"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/txttttt">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="Food Name:"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edittextstyle"
         android:layout_margin="5dp"
        android:id="@+id/foodname"
        android:textColor="@color/black"
        android:hint="Enter the item name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="Food Price:"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/edittextstyle"
        android:layout_margin="5dp"
        android:id="@+id/foodprice"
        android:textColor="@color/black"
        android:hint="Enter the item price"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Food Image:"
        android:textColor="@color/black"
        android:id="@+id/selectimage"
        android:drawableRight="@drawable/add_btnnnn"
        android:drawablePadding="0dp"
        android:gravity="start|center_vertical"
        android:paddingEnd="40dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
         android:src="@drawable/add"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/imgselect"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="Food Description:"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/edittextstyle"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:hint="enter description"
        android:id="@+id/fooddescription"
        android:gravity="top|start"
    android:layout_gravity="top"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        android:text="Ingridients:"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/edittextstyle"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:hint="enter ingridients"
        android:id="@+id/ingridients"
        android:gravity="top|start"
        android:layout_gravity="top"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create"
        android:text="Click here to Add item"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>



</LinearLayout>
    </ScrollView>

  </RelativeLayout>